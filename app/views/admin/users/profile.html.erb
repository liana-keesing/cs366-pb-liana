<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-10 main">

      <h2>Profile</h2>

      <div class="form-group">
        <label class="col-sm-2">Email address</label>
        <div class="col-sm-10">
          <%= @user.username %><br>
          <a href="<%= edit_profile_admin_users_path %>">Change email address</a>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2">Password</label>
        <div class="col-sm-10">
          <a href="<%= edit_password_admin_users_path %>">Change password</a>
        </div>
      </div>

    </div>
  </div>
</div>
